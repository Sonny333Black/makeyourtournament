@model makeyourtournament.Models.IndexViewModel
@{
    ViewBag.Title = "Verwalten";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="text-center">
                    Kontoeinstellungen
                </h3>
            </div>
            <div class="panel-body">
                <hr />
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <td>Username</td>
                                <td>@Model.UserDAL.name</td>
                            </tr>
                            <tr>
                                <td>E-Mail</td>
                                <td>@Model.UserDAL.email</td>
                            </tr>
                            <tr>
                                <td>Freundesschlüssel</td>
                                <td>@Model.UserDAL.friend_key</td>
                            </tr>
                        </thead>
                    </table>
                    <dl class="dl-horizontal">
                        <dt>Kennwort:</dt>
                        <dd>
                            @if (Model.HasPassword)
                            {
                                @Html.ActionLink("Kennwort ändern", "ChangePassword")
                            }                            
                        </dd>
                    </dl>
                    <dl class="dl-horizontal">
                        <dt>Account löschen:</dt>
                        <dd>
                            @Html.ActionLink("Account löschen", "DeleteAccount")
                        </dd>
                    </dl>

                </div>
        </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>